<Window x:Class="ClipDiscordApp.Views.RuleSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extraction Rules" Width="900" Height="560" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,8">
            <Button x:Name="BtnAdd" Content="Add" Width="70" Margin="0,0,8,0"/>
            <Button x:Name="BtnDuplicate" Content="Duplicate" Width="90" Margin="0,0,8,0"/>
            <Button x:Name="BtnRemove" Content="Remove" Width="80" Margin="0,0,8,0"/>
            <Button x:Name="BtnMoveUp" Content="Move Up" Width="80" Margin="0,0,8,0"/>
            <Button x:Name="BtnMoveDown" Content="Move Down" Width="80" Margin="0,0,8,0"/>
            <Button x:Name="BtnValidateSelected" Content="Validate Regex" Width="110" Margin="8,0,8,0"/>
            <Button x:Name="BtnSave" Content="Save" Width="90" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- ルール一覧 -->
        <Border Grid.Row="1" Grid.Column="0" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="6">
            <DockPanel LastChildFill="True">
                <TextBox x:Name="TxtFilter" DockPanel.Dock="Top" Margin="0,0,0,8" Height="26"/>
                <ListBox x:Name="ListRules" DisplayMemberPath="Name" SelectedIndex="0"/>
            </DockPanel>
        </Border>

        <!-- 編集パネル -->
        <Border Grid.Row="1" Grid.Column="2" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                    <CheckBox x:Name="ChkEnabled" Content="Enabled" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Type:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="CmbType" Width="120" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Name:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtName" Width="420"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Pattern:" Width="80" VerticalAlignment="Top"/>
                    <TextBox x:Name="TxtPattern" Width="620" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Order:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtOrder" Width="80"/>
                </StackPanel>

                <GroupBox Header="Preview / Test" Grid.Row="4" Margin="0,6,0,6">
                    <Grid Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Paste OCR text here to test matching:"/>
                        <TextBox x:Name="TxtPreviewInput" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                            <Button x:Name="BtnTestMatch" Content="Test Match" Width="100" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtPreviewResult" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Close" Width="90" Margin="0,0,8,0" Click="Close_Click"/>
                    <Button x:Name="BtnApply" Content="Apply" Width="90"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>